{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "lib": [
    "es2015"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  }
}